<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddSongs"
    android:orientation="vertical"
    android:weightSum="6"
    android:padding="7sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/black_border"
        android:weightSum="20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="16"
            android:gravity="center_vertical"
            android:text="Existing Songs:"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="40sp"
            app:autoSizeMaxTextSize="50sp"
            android:id="@+id/existingSongsTextView"
            android:textSize="50sp"
            android:textColor="?android:textColorPrimary"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="vertical"
            android:weightSum="10">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/white_upload_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Upload"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:id="@+id/uploadSongButton"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:src="@drawable/white_music_icon"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Upload"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:padding="12sp"
                android:id="@+id/viewSongs"
                />

        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/songManipulation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:foregroundGravity="bottom"
        />


</LinearLayout>
